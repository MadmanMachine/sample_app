<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% unless @user.microposts.empty? %>
      <%= render 'follow_form' if signed_in? %>
        <div class="microposts" summary="User microposts">
          <ol><%= render @microposts %></ol>
        </div>
        <%= will_paginate @microposts %>
      <% end %>
    </td>
    <td class="sidebar round">
      <%= render 'shared/sidebaring' %>
    </td>
  </tr>
</table>


